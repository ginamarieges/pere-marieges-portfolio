---
interface Props {
  id: String,
  title: String,
  class?: String
}
const {id, title, class: className } = Astro.props;
---
<section :id={id} class={`gap-4 max-w-xl w-full mx-auto lg:w-[740px] py-10 ${className}`}>
  <slot name="icon"></slot>
  <h2 class="text-4xl font-bold">{title}</h2>
  <slot/>
</section>
